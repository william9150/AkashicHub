# 生產環境配置
NODE_ENV=production

# 應用信息
VITE_APP_TITLE=AkashicHub
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=IT內部資源檢索系統

# API配置 (生產環境使用相對路徑)
VITE_API_BASE_URL=/api
VITE_WS_BASE_URL=ws://your-production-domain.com

# 生產環境功能開關 (關閉所有調試功能)
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEVTOOLS=false
VITE_SHOW_PERFORMANCE=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_CONSOLE_LOG=false

# 系統配置
VITE_DEFAULT_LANGUAGE=zh-TW
VITE_DEFAULT_THEME=light
VITE_PAGE_SIZE=20

# 生產環境安全配置
VITE_SECURE_COOKIES=true
VITE_HTTPS_ONLY=true